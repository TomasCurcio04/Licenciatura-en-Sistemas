programa ejercicio3 
procesos 
  proceso contarFlores(ES flores:numero) 
  comenzar 
    si(HayFlorEnLaEsquina)
      mientras(HayFlorEnLaEsquina) 
        tomarFlor 
        flores:=flores+1 
      repetir flores 
        depositarFlor 
  fin
  proceso contarPapeles(ES papeles:numero)
  comenzar
    si(HayFlorEnLaEsquina)
      mientras(HayPapelEnLaEsquina)
        tomarPapel
        papeles:=papeles+1
      repetir papeles
        depositarPapel
  fin
  proceso esMayor(E papeles:numero;E flores:numero;ES cant:numero)
  comenzar
    si(papeles=(flores+1))
      cant:=cant+1
  fin
  proceso escalon(E alto:numero;E flores:numero;E papeles:numero;ES cant:numero)
  comenzar 
    repetir 2
      repetir alto  
        contarFlores(flores) 
        contarPapeles(papeles) 
        mover 
      derecha 
    esMayor(papeles,flores,cant)
  fin  

areas 
  Area1:AreaC(1,1,100,100) 
robots 
  robot robot1 
  variables 
    alto,escalones,flores,papeles,cant:numero 
  comenzar  
    alto:=1 
    escalones:=4 
    cant:=0
    repetir escalones 
      flores:=0
      papeles:=0
      escalon(alto,flores,papeles,cant) 
      repetir 2
        derecha
      alto:=alto+1
    Informar(cant)
  fin 

variables
  robot1:robot1
  robot2:robot1
  robot3:robot1
comenzar
  AsignarArea(robot1,Area1)
  AsignarArea(robot2,Area1)
  AsignarArea(robot3,Area1)
  Iniciar(robot1,12,14)
  Iniciar(robot2,17,10)
  Iniciar(robot3,22,6)
fin