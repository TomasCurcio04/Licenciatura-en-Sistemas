programa ejercicio2  
procesos   
  proceso juntarPapeles(ES papeles:numero)  
  comenzar  
    mientras (HayPapelEnLaEsquina)  
      tomarPapel  
      papeles:=papeles+1      
  fin  
  proceso moverse(E pasos:numero;ES papeles:numero)
  comenzar 
    repetir pasos 
      juntarPapeles(papeles) 
      mover 
    juntarPapeles(papeles)
  fin  

areas 
  area1:AreaPC(10,10,10,29) 
  area2:AreaPC(10,30,29,30)
  area3:AreaPC(30,11,30,30)
  area4:AreaPC(11,10,30,10)

robots   
  robot tipo1  
  variables   
    papeles,pasos:numero   
  comenzar   
    pasos:=19 
    papeles:=0 
    moverse(pasos,papeles)   
    Informar(papeles)   
  fin 
  robot tipo2
  variables  
    papeles,pasos:numero  
  comenzar   
    derecha 
    pasos:=19  
    papeles:=0 
    moverse(pasos,papeles)   
    Informar(papeles)  
  fin  
  robot tipo3
  variables  
    papeles,pasos:numero  
  comenzar  
    repetir 2
      derecha
    pasos:=19
    papeles:=0
    moverse(pasos,papeles)  
    Informar(papeles)  
  fin 
  robot tipo4
  variables  
    papeles,pasos:numero  
  comenzar  
    repetir 3
      derecha
    pasos:=19  
    papeles:=0
    moverse(pasos,papeles)  
    Informar(papeles)  
  fin 

variables 
  robot1:tipo1 
  robot2:tipo2
  robot3:tipo3 
  robot4:tipo4 

comenzar
  AsignarArea(robot1,area1)
  AsignarArea(robot1,area2)
  AsignarArea(robot2,area2)
  AsignarArea(robot2,area3)
  AsignarArea(robot3,area3)
  AsignarArea(robot3,area4)
  AsignarArea(robot4,area4)
  AsignarArea(robot4,area1)
  Iniciar(robot1,10,10)
  Iniciar(robot2,10,30)
  Iniciar(robot3,30,30)
  Iniciar(robot4,30,10)
fin